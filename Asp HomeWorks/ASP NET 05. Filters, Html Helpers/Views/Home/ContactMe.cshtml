@model ContactViewModel

@{
    ViewData["Title"] = "Contact Me ";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3 class="mb-0">Связаться со мной</h3>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success</div>
                    }
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-controller="Contact" asp-action="Send" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Ваше имя</label>
                            <input asp-for="Name" class="form-control" placeholder="Иван Иванов">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Ваш Email</label>
                            <input asp-for="Email" class="form-control" placeholder="example@mail.com">
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Message" class="form-label">Сообщение</label>
                            <textarea asp-for="Message" class="form-control" rows="4" placeholder="Привет, есть интересный проект..."></textarea>
                            <span asp-validation-for="Message" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Отправить сообщение</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>